<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AiRTech2.Views.UniViews.SimpleImagesView"
             xmlns:misc="clr-namespace:AiRTech2.Misc;assembly=AiRTech2"
             HorizontalOptions="Fill" VerticalOptions="Fill">
    <ContentView.Content>
        <StackLayout>
            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="15" HorizontalTextAlignment="Center"/>
            <ScrollView HorizontalOptions="CenterAndExpand">
                <StackLayout x:Name="ImageContainer" HorizontalOptions="Fill"/>
            </ScrollView>
        </StackLayout>
    </ContentView.Content>
</ContentView>